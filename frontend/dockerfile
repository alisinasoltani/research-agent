# Use a Node.js 20.x base image for the build stage.
# This stage installs dependencies and builds the Next.js application.
FROM node:20-alpine AS builder
# Set the working directory inside the container.
WORKDIR /app

# Copy package.json and package-lock.json to install dependencies.
COPY package*.json ./
# Install project dependencies.
RUN npm install

# Copy the rest of the application source code.
COPY . .
# Run the Next.js build command to create a production-ready application.
RUN npm run build

# Use a Node.js 20.x base image for the production stage.
# This stage will only contain the built application and the necessary
# dependencies to run it, resulting in a smaller final image.
FROM node:20-alpine AS runner
WORKDIR /app

# The Next.js app will listen on port 3000.
EXPOSE 3000

# Copy the built application from the builder stage.
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json
COPY --from=builder /app/public ./public
COPY --from=builder /app/.env.local ./

# Define the command to start the Next.js production server.
CMD ["npm", "run", "start"]
